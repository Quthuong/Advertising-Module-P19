        <link href="css/styles.css" rel="stylesheet" />
        <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    </head>

    <style>
        .form-group {
            padding: 10px;
        }
        .form-group label {
            margin: 10px 0 5px 0;
        }


    </style>

    <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand--> 
            <a class="navbar-brand ps-3" href="/">SP19-Advertise module</a>
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
            <!-- Navbar Search-->
            <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
                <div class="input-group">
                    <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                    <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
                </div>
            </form>
            <!-- Navbar-->
            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#!">Settings</a></li>
                        <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="#!">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <a class="nav-link" href="/">
                                <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                                Dashboard
                            </a>

                            <div class="sb-sidenav-menu-heading">Feature</div>
                            <a class="nav-link" href="/all-ads">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-rectangle-ad"></i></div>
                                Manage advertise
                            </a>
                            <a class="nav-link" href="/guest-ads">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-eye"></i></div>
                                Show advertise
                            </a>
                        </div>
                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="small">Bootstrap</div>
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <div class="row">
                            <form action="/create-ads" enctype="multipart/form-data" method="POST">
                                <div class="row align-center">
                                    <div class="col-12 mt-3" style="text-align: center;">
                                        <h3>Tạo quảng cáo</h3>
                                    </div>
                                </div>
                                <div class="row align-center">
                                    <div class="form-group col-md-6">
                                        <label for="ads-name">Name</label>
                                        <input id ="ads-name" type="text" class="form-control" name="name" placeholder="name">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="image">Image</label>
                                        <input type="file" class="form-control" name="image" placeholder="image">
                                    </div>
                                </div>
                                <div class="row align-center">
                                    <div class="form-group col-md-12">
                                        <label for="ads-content">Content</label>
                                        <textarea id="ads-content" type="text" class="form-control" name="content" placeholder="Content" rows="4"></textarea>
                                    </div>
                                </div>
                
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label for="start-date">Ngay bat dau</label>
                                        <input id="start-date" class="form-control" type="datetime-local"  name="startedAt">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="start-date">Ngay ket thuc</label>
                                        <input id="finish-date" class="form-control" type="datetime-local"  name="finishedAt">
                                    </div>
                                </div>
                
                                <div class="row">
                                        <div class="form-group col-md-6">
                                            <label for="inputZip">Doi tuong quang cao</label>
                                            <select name="type" class="form-control">
                                                <option value="1">San pham moi</option>
                                                <option value="2">San pham ban chay</option>
                                                <option value="3">San pham giam gia</option>
                                                <option value="4">Su kien dac biet</option>
                
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </main>

            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
    </body>
</html>
